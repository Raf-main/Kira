{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JwtOptions": {
    "SecretKey": "r!5mhgREWmdfkgm54^654yhfgf9!444324234fds2",
    // минимум 32 символа
    "ValidateIssuer": "true",
    "ValidateAudience": "true",
